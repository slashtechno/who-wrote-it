{
  "version": "0.2.0",
  "configurations": [   
    {
      "name": "Next.js (Bun) dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun --inspect run dev",
      "cwd": "${workspaceFolder}",
      "env": {
        "PORT": "3000"
      }
    },
    {
      "name": "Next.js (Bun) build & start",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun run build && bun run start",
      "cwd": "${workspaceFolder}",
      "env": {
        "PORT": "3000"
      }
    }
  ]
}